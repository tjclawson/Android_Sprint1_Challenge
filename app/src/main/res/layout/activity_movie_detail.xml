<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieDetail">

    <EditText
            android:id="@+id/edittext_movie_title"
            android:hint="Movie Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="-122dp"
            app:layout_constraintVertical_bias="0.467"/>



    <Button
            android:id="@+id/button_save_movie"
            android:text="Save Movie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_delete_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />
    <Button
            android:id="@+id/button_delete_movie"
            android:text="Delete Movie"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/button_delete_movie"/>

    <Button
            android:id="@+id/button_watched"
            android:text="Watched"
            app:layout_constraintTop_toBottomOf="@id/edittext_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>